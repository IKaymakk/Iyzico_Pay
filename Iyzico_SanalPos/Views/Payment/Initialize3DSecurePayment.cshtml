@model Iyzipay.Request.CreatePaymentRequest
@{
    ViewData["Title"] = "3D Secure Ödeme Başlat";
}

<h2>3D Secure Ödeme Başlat</h2>

<form asp-action="Initialize3DSecurePayment" method="post">
    <div>
        <label for="price">Tutar:</label>
        <input asp-for="Price" id="price" readonly />
    </div>
    <button type="submit">Ödeme Başlat</button>
</form>

@if (!ViewData.ModelState.IsValid)
{
    <div>
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p style="color: red;">@error.ErrorMessage</p>
        }
    </div>
}
